            </LinearLayout>
            <android.support.v7.widget.AppCompatImageView
	android:layout_gravity="center"
	android:id="@id/btn_screen"
	android:background="@null"
	android:padding="5.0dip"
	android:visibility="gone"
	android:layout_width="wrap_content"
