	android:layout_weight="0.0"
	android:foregroundGravity="right" app:srcCompat="@drawable/hplib_ic_settings" xmlns:app="http://schemas.android.com/apk/res-auto" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
	android:gravity="center"
	android:layout_gravity="center"
	android:id="@id/loadingVPanel"
	android:visibility="gone"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
        <ProgressBar
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:indeterminate="true" />
    </RelativeLayout>
    <LinearLayout
	android:gravity="center_vertical"
	android:orientation="horizontal"
	android:id="@id/unlock_panel"
	android:background="#96000000"
	android:padding="10.0dip"
	android:visibility="gone"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_marginLeft="10.0dip"
	android:layout_marginTop="10.0dip">
        <android.support.v7.widget.AppCompatImageView
	android:layout_gravity="center"
	android:id="@id/btn_unlock"
	android:background="@null"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content" app:srcCompat="@drawable/hplib_ic_unlock" xmlns:app="http://schemas.android.com/apk/res-auto" />
    </LinearLayout>
    <LinearLayout
	android:gravity="center"
	android:orientation="vertical"
	android:id="@id/seekbar_center_text"
	android:visibility="gone"
	android:layout_width="wrap_content"
	android:layout_height="fill_parent"
	android:layout_centerHorizontal="true">
        <android.support.v7.widget.AppCompatTextView
	android:textSize="50.0dip"
	android:textStyle="bold"
	android:textColor="#ffffffff"
	android:id="@id/txt_seek_currTime"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="00:44" />
        <android.support.v7.widget.AppCompatTextView
	android:textSize="50.0dip"
	android:textStyle="bold"
	android:textColor="#ffffffff"
