<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	android:orientation="vertical"
	android:id="@id/exo_playback_control_view"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
	android:gravity="center"
	android:orientation="horizontal"
	android:id="@id/top"
	android:background="#96000000"
	android:paddingRight="50.0dip"
	android:visibility="visible"
	android:layout_width="fill_parent"
	android:layout_height="48.0dip">
        <android.support.v7.widget.AppCompatImageView
	android:layout_gravity="center"
	android:id="@id/btn_back"
	android:background="@null"
	android:padding="15.0dip"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:foreground="?android:selectableItemBackground" app:srcCompat="@drawable/hplib_ic_back" xmlns:app="http://schemas.android.com/apk/res-auto" />
        <android.support.v7.widget.AppCompatTextView
	android:textAppearance="?android:textAppearanceMedium"
