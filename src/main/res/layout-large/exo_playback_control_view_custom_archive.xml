	android:orientation="horizontal"
	android:id="@id/seekbar_time"
	android:background="#96000000"
	android:visibility="visible"
	android:layout_width="fill_parent"
	android:layout_height="48.0dip"
	android:foregroundGravity="center">
            <android.support.v7.widget.AppCompatTextView
	android:textAppearance="?android:textAppearanceSmall"
	android:textColor="#ffffffff"
	android:id="@id/exo_position"
	android:paddingLeft="20.0dip"
	android:paddingTop="10.0dip"
	android:paddingRight="10.0dip"
	android:paddingBottom="10.0dip"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="00:00:00" />
            <com.google.android.exoplayer2.ui.DefaultTimeBar
	android:id="@id/exo_progress"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:layout_weight="1.0" app:touch_target_height="50.0dip" xmlns:app="http://schemas.android.com/apk/res-auto" />
            <android.support.v7.widget.AppCompatTextView
	android:textAppearance="?android:textAppearanceSmall"
	android:textColor="#ffffffff"
	android:id="@id/exo_duration"
	android:paddingLeft="10.0dip"
	android:paddingTop="10.0dip"
	android:paddingRight="20.0dip"
	android:paddingBottom="10.0dip"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="00:00:00" />
        </LinearLayout>
        <LinearLayout
	android:orientation="horizontal"
	android:id="@id/controls"
	android:background="#96000000"
	android:paddingBottom="10.0dip"
	android:visibility="visible"
	android:layout_width="fill_parent"
	android:layout_height="48.0dip">
            <android.support.v7.widget.AppCompatImageView
	android:layout_gravity="right"
	android:id="@id/btn_lock"
	android:background="@null"
	android:padding="5.0dip"
	android:visibility="gone"
	android:layout_width="32.0dip"
	android:layout_height="32.0dip"
	android:layout_marginLeft="20.0dip"
	android:foreground="?android:selectableItemBackground"
	android:layout_weight="0.0" n4:srcCompat="@drawable/hplib_ic_lock" xmlns:n4="http://schemas.android.com/apk/res-auto" />
            <LinearLayout
	android:layout_gravity="center"
	android:orientation="horizontal"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_marginLeft="70.0dip"
	android:layout_marginRight="70.0dip"
	android:layout_weight="1.0">
                <android.support.v7.widget.AppCompatImageView
	android:layout_gravity="center"
	android:id="@id/exo_prev"
	android:background="@null"
	android:padding="7.0dip"
	android:layout_width="32.0dip"
	android:layout_height="32.0dip"
	android:layout_marginRight="24.0dip"
	android:foreground="?android:selectableItemBackground"
	android:cropToPadding="false"
	android:minWidth="32.0dip"
	android:layout_weight="1.0" n5:srcCompat="@drawable/hplib_ic_previous" xmlns:n5="http://schemas.android.com/apk/res-auto" />
                <android.support.v7.widget.AppCompatImageView
	android:layout_gravity="center"
	android:id="@id/exo_rew"
	android:background="@null"
	android:padding="7.0dip"
	android:layout_width="32.0dip"
	android:layout_height="32.0dip"
	android:layout_marginRight="24.0dip"
	android:foreground="?android:selectableItemBackground"
	android:minWidth="32.0dip"
	android:layout_weight="1.0" n6:srcCompat="@drawable/hplib_ic_rewind_vod" xmlns:n6="http://schemas.android.com/apk/res-auto" />
                <android.support.v7.widget.AppCompatImageView
	android:layout_gravity="center"
	android:id="@id/exo_pause"
	android:background="@null"
	android:padding="7.0dip"
	android:layout_width="32.0dip"
	android:layout_height="32.0dip"
	android:layout_marginRight="24.0dip"
	android:foreground="?android:selectableItemBackground"
	android:minWidth="32.0dip"
	android:layout_weight="1.0" n7:srcCompat="@drawable/hplib_ic_pause" xmlns:n7="http://schemas.android.com/apk/res-auto" />
                <android.support.v7.widget.AppCompatImageView
	android:layout_gravity="center"
	android:id="@id/exo_play"
	android:background="@null"
	android:padding="7.0dip"
	android:visibility="gone"
	android:layout_width="32.0dip"
	android:layout_height="32.0dip"
	android:layout_marginRight="24.0dip"
	android:foreground="?android:selectableItemBackground"
	android:minWidth="32.0dip"
	android:layout_weight="1.0" n8:srcCompat="@drawable/hplib_ic_play_download" xmlns:n8="http://schemas.android.com/apk/res-auto" />
                <android.support.v7.widget.AppCompatImageView
	android:layout_gravity="center"
	android:id="@id/exo_ffwd"
	android:background="@null"
	android:padding="7.0dip"
	android:layout_width="32.0dip"
	android:layout_height="32.0dip"
	android:layout_marginRight="24.0dip"
	android:foreground="?android:selectableItemBackground"
	android:minWidth="32.0dip"
	android:layout_weight="1.0" n9:srcCompat="@drawable/hplib_ic_forward_vod" xmlns:n9="http://schemas.android.com/apk/res-auto" />
                <android.support.v7.widget.AppCompatImageView
	android:layout_gravity="center"
	android:id="@id/exo_next"
	android:background="@null"
	android:padding="7.0dip"
